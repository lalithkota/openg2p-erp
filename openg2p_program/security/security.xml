<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="openg2p_program.group_openg2p_program_enrollment_manager" model="res.groups">
            <field name="name">Program Enrollment Officer</field>
            <field name="category_id" ref="openg2p.module_category_openg2p"/>
            <!-- <field name="implied_ids" eval="[(4, ref('openg2p.group_openg2p_officer'))]"/> -->
            <field name="implied_ids" eval="[(4, ref('web_export_view.group_disallow_export_view_data_excel'))]"/>
        </record>

        <record id="openg2p.group_openg2p_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('openg2p_program.group_openg2p_program_enrollment_manager'))]"/>
        </record>

        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('openg2p_program.group_openg2p_program_enrollment_manager'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('openg2p_program.group_openg2p_program_enrollment_manager'))]"/>
        </record>

        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4,ref('openg2p_program.group_openg2p_program_enrollment_manager'))]"/>
        </record>

        <record id="openg2p_program_comp_rule" model="ir.rule">
            <field name="name">Program multi company rule</field>
            <field name="model_id" ref="model_openg2p_program"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">['|', ('company_id', '=', False),
                                        ('company_id', 'child_of', [user.company_id.id])]</field>
        </record>

        <record id="openg2p_program_not_comp_read_rule" model="ir.rule">
            <field name="name">Program multi not company read rule</field>
            <field name="model_id" ref="model_openg2p_program"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">['!',('company_id', 'child_of', [user.company_id.id])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="openg2p_program_enrollment_comp_rule" model="ir.rule">
            <field name="name">Program Enrollment multi company rule</field>
            <field name="model_id" ref="model_openg2p_program_enrollment"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('program_id.company_id', 'child_of', [user.company_id.id])]</field>
        </record>

        <record id="openg2p_program_enrollment_comp_read_rule" model="ir.rule">
            <field name="name">Program Enrollment multi company Read rule</field>
            <field name="model_id" ref="model_openg2p_program_enrollment"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('beneficiary_id.belonging_company_ids', 'like', ','+str(user.company_id.id)+',')]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
